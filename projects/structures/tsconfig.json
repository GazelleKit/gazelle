{
  "include": [ "src/**/*", "tests/**/*" ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": false,
    "removeComments": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "build",
  }
}